<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%= kindOfDay %> </h1>
  </div>
  <div class="box">

    <%   for (var i=0; i<items.length; i++){ %>
      <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= items[i]._id %>" onchange="this.form.submit()">
      <p><%= items[i].name %></p>
      <input type="hidden" name="listName" value="<%= kindOfDay %>">
    </div>
    </form>
    <% } %>
    <form class="item" action="/" method="post">
      <input type="text" name="nextItem" placeholder="New item" autocomplete="off">
      <button type="submit" name="button" value=<%= kindOfDay %>>+</button>
    </form>
  </div>

<%- include("footer") -%>
